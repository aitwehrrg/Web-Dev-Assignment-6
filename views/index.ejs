<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./styles-general.css">
    <link rel="stylesheet" href="./Styles/styles-frontpage.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Gaming Chronicles</title>
</head>
<body>
    <header>
        <p id="site-title">Gaming Chronicles</p>
    </header>

    <main>
        <section class="popular_right_now">
            <p class="section_title">Popular Right Now</p>

            <div class="game_cards">
                <% for( let index = 0; index < numCards; index++ ) { %>
                    <%- include('game-card', { cardData: gamesInfo[index%(gamesInfo.length)]}) %>
                <% } %>
            </div>

        </section>
        
        <section class="highly_rated">
            <p class="section_title">Highly Rated</p>

            <div class="game_cards">
                <% for( let index = 0; index < numCards; index++ ) { %>
                    <%- include('game-card', { cardData: gamesInfo[index%(gamesInfo.length)]}) %>
                <% } %>
            </div>
        </section>

        <section class="releasing_soon">
            <p class="section_title">Releasing Soon</p>

            <div class="game_cards">
                <% for( let index = 0; index < numCards; index++ ) { %>
                    <%- include('game-card', { cardData: gamesInfo[index%(gamesInfo.length)]}) %>
                <% } %>
            </div>
        </section>
    </main>

    <footer>
        <p>Community:</p><address>github.com/aitwehrrg/Web-Dev-Assignment-6</address>
        <span class="fa fa-info-circle" id="info-circle"></span>
    </footer>

    <script src="./Scripts/cardClick.js"></script>
    <script src="./Scripts/titleClick.js"></script>
    <script src="./Scripts/infoClick.js"></script>
</body>
</html>